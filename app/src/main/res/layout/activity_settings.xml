<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.morningessetial.morningessentials.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/r1"
            android:background="#BCFFFFFF"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:gravity="center"
                android:id="@+id/finish"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/t1"
                android:layout_centerInParent="true"
                android:text="Settings"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/r1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/pro"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/pro1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="25dp"
                    android:text="Profile"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:id="@+id/pro2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="25dp"
                    android:text=">"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginEnd="25dp"
                    android:id="@+id/pro3"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/about"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_folder_open_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:id="@+id/about1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:text="About us"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:id="@+id/about2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="25dp"
                    android:text=">"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginEnd="25dp"
                    android:id="@+id/about3"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/policy2"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_info_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:id="@+id/policy1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:text="Privacy policy"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:id="@+id/privacy"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:layout_marginStart="25dp"
                    android:text=">"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginEnd="25dp"
                    android:id="@+id/policy3"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>